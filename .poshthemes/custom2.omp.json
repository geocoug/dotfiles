{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "console_title_template": "{{ .Folder }}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "diamond",
                    "leading_diamond": "\u256d\u2500\ue0b6",
                    "background": "#81ff91",
                    "foreground": "#29315A",
                    "template": "{{.Icon}} "
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "powerline_symbol": "\ue0b0",
                    "trailing_diamond": "\ue0b4",
                    "foreground": "#81ff91",
                    "background": "#29315A",
                    "template": " {{ .Path }}",
                    "properties": {
                        "style": "full",
                        "folder_separator_icon": "/"
                    }
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4",
                    "foreground": "#43CCEA",
                    "background": "#29315A",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
                        "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
                        "{{ if gt .Behind 0 }}#B388FF{{ end }}"
                    ],
                    "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
                    "properties": {
                        "branch_max_length": 25,
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    }
                },
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "#C94A16",
                    "template": " x "
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "python",
                    "style": "diamond",
                    "background": "#4584b6",
                    "foreground": "#ffde57",
                    "leading_diamond": "\ue0b6",
                    "trailing_diamond": "\ue0b4",
                    "properties": {
                        "fetch_version": false
                    },
                    "template": "\ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }}{{ end }}{{ .Full }}{{ end }}"
                },
                {
                    "type": "executiontime",
                    "style": "powerline",
                    "foreground": "#ffffff",
                    "background": "#29315A",
                    "invert_powerline": true,
                    "leading_powerline_symbol": "\ue0b6",
                    "template": " {{ .FormattedMs }} ",
                    "properties": {
                        "always_enabled": true
                    }
                },
                {
                    "type": "time",
                    "style": "diamond",
                    "background": "#646464",
                    "foreground": "#ffffff",
                    "invert_powerline": true,
                    "powerline_symbol": "\ue0b0",
                    "trailing_diamond": "\ue0b4",
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "template": " {{ .CurrentDate | date .Format }} "
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#81ff91",
                    "template": "\u2570\u2500 "
                }
            ],
            "newline": true
        }
    ]
}