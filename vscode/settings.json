{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.sortImports.args": ["--profile", "black"],
  "editor.accessibilitySupport": "off",
  "python.linting.flake8Args": [
    "--config=${workspaceFolder}/.github/linters/.flake8"
  ],
  "workbench.iconTheme": "material-icon-theme",
  "python.terminal.activateEnvironment": true,
  "editor.scrollBeyondLastLine": false,
  "explorer.confirmDelete": false,
  "terminal.integrated.inheritEnv": false,
  "editor.wordWrap": "on",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "editor.formatOnSave": true,
  "workbench.settings.editor": "json",
  "python.linting.lintOnSave": true,
  "python.linting.enabled": true,
  "workbench.settings.useSplitJSON": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=88"],
  "python.venvPath": "${workspaceFolder}/.venv/bin/python",
  "python.linting.pylintArgs": ["--rcfile=${workspaceFolder}/.pylintrc"],
  "workbench.settings.openDefaultSettings": true,
  "editor.linkedEditing": true,
  "python.linting.flake8Path": "flake8",
  "python.formatting.blackPath": "black",
  "python.linting.flake8Enabled": true,
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.banditEnabled": true,
  "python.linting.banditPath": "${workspaceFolder}/.venv/bin/bandit",
  "terminal.external.osxExec": "iTerm.app",
  "editor.tabCompletion": "on",
  "python.linting.mypyArgs": [
    "--follow-imports=silent",
    "--ignore-missing-imports",
    "--show-column-numbers",
    "--no-pretty",
    "--config-file=${workspaceFolder}/.github/linters/.mypy.ini"
  ],
  "python.linting.mypyPath": "${workspaceFolder}./venv/bin/python",
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": true,
  "workbench.startupEditor": "none",
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "python.sortImports.path": "${workspaceFolder}/.venv/bin/isort",
  "editor.bracketPairColorization.enabled": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "editor.minimap.enabled": false,
  "python.venvFolders": ["${workspaceFolder}", "/Users/cgrant/venvs"],
  "cSpell.userWords": [
    "cgrant",
    "clparser",
    "dotfile",
    "dotfiles",
    "psycopg",
    "vimrc"
  ],
  "editor.stickyScroll.enabled": true
}
